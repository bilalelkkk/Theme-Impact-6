    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-color-switcher-product-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
  }

  .ai-color-switcher-image-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .ai-color-switcher-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;transition: transform 0.3s ease;
  }

  .ai-color-switcher-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-color-switcher-placeholder-{{ ai_gen_id }} svg {
    width: 30px;
    height: 30px;
    opacity: 0.5;
  }

  .ai-color-switcher-info-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-color-switcher-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 4px;
  }

  .ai-color-switcher-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.price_color }};
    margin: 0;
  }

  .ai-color-switcher-colors-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .ai-color-switcher-color-{{ ai_gen_id }} {
    width: {{ block.settings.color_size }}px;
    height: {{ block.settings.color_size }}px;
    border-radius: 50%;
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .ai-color-switcher-color-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    border-color: {{ block.settings.hover_border_color }};
  }

  .ai-color-switcher-color-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.active_border_color }};
    box-shadow: 0 0 0 2px {{ block.settings.active_border_color }}40;
  }

  .ai-color-switcher-actions-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .ai-color-switcher-button-{{ ai_gen_id }} {
    padding: 8px 16px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 5px;
    transition: all 0.3s ease;
  }

  .ai-color-switcher-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  .ai-color-switcher-cart-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.cart_button_color }};}

