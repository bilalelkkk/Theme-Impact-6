</color-switcher-{{ ai_gen_id }}><script>
  (function() {
    class ColorSwitcher{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.colorButtons = this.querySelectorAll('.ai-color-switcher-color-{{ ai_gen_id }}');
        this.cartButtons = this.querySelectorAll('[data-add-to-cart]');
        this.viewButtons = this.querySelectorAll('a[data-row]');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.colorButtons.forEach(button => {
          button.addEventListener('click', (e) => {
            const row = e.target.dataset.row;
            const color = e.target.dataset.color;
            const variantId = e.target.dataset.variantId;
            const variantPrice = e.target.dataset.variantPrice;
            const variantTitle = e.target.dataset.variantTitle;
            const variantImage = e.target.dataset.variantImage;
            const productId = e.target.dataset.productId;
            
            const rowButtons = this.querySelectorAll(`[data-row="${row}"].ai-color-switcher-color-{{ ai_gen_id }}`);
            rowButtons.forEach(btn => btn.classList.remove('active'));
            
            e.target.classList.add('active');
            
            this.updateProductInfo(row, variantPrice, variantTitle, variantImage, variantId, productId);
            
            this.dispatchEvent(new CustomEvent('colorChanged', {
              detail: {
                row: row,
                color: color,
                productId: productId,
                variantId: variantId
              }
            }));
          });
        });

        this.cartButtons.forEach(button => {
          button.addEventListener('click', (e) => {
            e.preventDefault();
            const variantId = e.target.dataset.variantId;
            this.addToCart(variantId, button);
          });
        });
      }

      updateProductInfo(row, price, title, image, variantId, productId) {
        const priceElement = this.querySelector(`[data-row="${row}"].ai-color-switcher-price-{{ ai_gen_id }}`);
        const variantInfoElement = this.querySelector(`[data-row="${row}"].ai-color-switcher-variant-info-{{ ai_gen_id }}`);
        const imageElement = this.querySelector(`[data-row="${row}"].ai-color-switcher-main-image-{{ ai_gen_id }}`);
        const cartButton = this.querySelector(`[data-row="${row}"][data-add-to-cart]`);
        const viewButton = this.querySelector(`a[data-row="${row}"]`);

        if (priceElement && price) {
          const formattedPrice = new Intl.NumberFormat('hu-HU', {
            style: 'currency',
            currency: 'HUF',
            minimumFractionDigits: 0
          }).format(price / 100);
          priceElement.textContent = formattedPrice;
        }

        if (variantInfoElement && title) {
          variantInfoElement.textContent = title;
        }

        if (imageElement && image) {
          imageElement.src = image;
        }

        if (cartButton && variantId) {
          cartButton.dataset.variantId = variantId;
        }

        if (viewButton && productId && variantId) {
          const currentUrl = new URL(viewButton.href);
          currentUrl.searchParams.set('variant', variantId);
          viewButton.href = currentUrl.toString();
        }
      }

      async addToCart(variantId, button) {
        const originalText = button.innerHTML;
        button.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"></circle></svg> Hozzáadás...';
        button.disabled = true;

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: 1
            })
          });

          if (response.ok) {
            button.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 6L9 17l-5-5"></path></svg> Hozzáadva!';
            document.dispatchEvent(new CustomEvent('cart:updated'));
            
            setTimeout(() => {
              button.innerHTML = originalText;
              button.disabled = false;
            }, 2000);
          } else {
            throw new Error('Failed to add to cart');
          }
        } catch (error) {
          button.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg> Hiba!';
          
          setTimeout(() => {
            button.innerHTML = originalText;
            button.disabled = false;
          }, 2000);
        }
      }
    }

    customElements.define('color-switcher-{{ ai_gen_id }}', ColorSwitcher{{ ai_gen_id }});
  })();
</script>

